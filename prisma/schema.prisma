generator client {
    provider = "prisma-client-js"
}

generator nexusPrisma {
    provider = "nexus-prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Task {
    id          Int       @id @default(autoincrement())
    title       String
    description String?
    status      String
    createdAt   DateTime  @default(now())
    subTasks    SubTask[]
}

model SubTask {
    id          Int      @id @default(autoincrement())
    title       String
    description String?
    status      String
    createdAt   DateTime @default(now())
    taskId      Int
    task        Task     @relation(fields: [taskId], references: [id])
}
